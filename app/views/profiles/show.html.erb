<div class="container pt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
                <%= link_to '編集', edit_profile_path, class: 'btn btn-success float-right' %>
                <table class="table">
                    <tr>
                        <th scope="row"><%= User.human_attribute_name(:name) %></th>
                        <td><%= current_user.name %></td>
                    </tr>
                    <tr>
                        <th scope="row"><%= User.human_attribute_name(:email) %></th>
                        <td><%= current_user.email %></td>
                    </tr>
                    <tr>
                        <th scope="row"><%= User.human_attribute_name(:profile) %></th>
                        <td><%= current_user.profile %></td>
                    </tr>
                    <% if current_user.avatar? %>
                    <tr>
                        <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
                        <td><%=image_tag current_user.avatar.url, class: 'rounded-circle', size: '50x50' %></td>
                    </tr>
                    <% end %>
                </table>
            </div>
        </div>
</div>
